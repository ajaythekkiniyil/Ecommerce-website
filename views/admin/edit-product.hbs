<div class="container mt-5">
    <form action="/admin/edit-product/{{resp._id}}" method="POST" enctype="multipart/form-data">
        <h1>Edit Products</h1>
        <div class="form-group">
            <label for="name">Name Of Product</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name of Product"
                value="{{resp.name}}">
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="text" class="form-control" id="price" name="price" placeholder="Enter Price of Product"
                value="{{resp.price}}">
        </div>

        <div class="form-group">
            <label for="image">Image</label>
            <img src="/images/productImages/{{resp._id}}.jpg" alt="" style="width: 60px;height: 60px;" id="imageView">
            <input type="file" class="form-control" id="image" name="image" onchange="viewImage(event)">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<script>
    function viewImage(event) {
        document.getElementById('imageView').src = URL.createObjectURL(event.target.files[0]);
    }
</script>