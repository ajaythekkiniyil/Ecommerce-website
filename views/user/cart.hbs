{{>header}}
<!--Section: Block Content-->
<div class="container">
    <section>
        <h1 class="mb-4">Cart items</h1>
        <!--Grid row-->
        <div class="row">
            {{#each userCart}}
            <!--Grid column-->
            <div class="col-lg-8">

                <!-- Card -->
                <div class="mb-3">
                    <div class="pt-4 wish-list">

                        <div class="row mb-4">
                            <div class="">
                                <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                                    <img class="" src="/images/productImages/{{this.product.id}}.jpg" alt="Sample"
                                        style="width: 100px;height: 90px;">
                                </div>
                            </div>
                            <div class="col-md-7 col-lg-9 col-xl-9">
                                <div>
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h5>{{this.product.name}}</h5>
                                        </div>
                                        <div>
                                            <button class="btn btn-outline-secondary"
                                                onclick="changeQuantity('{{this._id}}',-1)">-</button>
                                            <span id="{{this._id}}">{{this.quantity}}</span>
                                            <button class="btn btn-outline-secondary"
                                                onclick="changeQuantity('{{this._id}}',1)">+</button>
                                        </div>
                                    </div>
                                    <div class=" d-flex justify-content-between align-items-center">
                                        <div>
                                            {{!-- passing collection _id --}}
                                            {{!-- <a href="/remove-from-cart/{{this._id}}" type="button"
                                                class="card-link-secondary small text-uppercase mr-3"><i
                                                    class="fas fa-trash-alt mr-1"></i> Remove item </a> --}}
                                            <button class="btn btn-link " onclick="removeItem('{{this._id}}')">Remove
                                                item</button>
                                        </div>

                                        <p class="mb-0 mt-4"><span><strong
                                                    id="summary{{this._id}}">{{this.updatedPrice}}</strong></span>
                                        </p class="mb-0">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Card -->


            </div>
            <!--Grid column-->
            {{/each}}
        </div>
        <hr>

        {{!-- calculate total amount --}}
        <button class="btn btn-danger" onclick="calculateTotalAmount()">Calculate Total Amount</button>

        <!-- Grid row -->
        <!--Grid column-->
        <div class="col-lg-4">

            <!-- Card -->
            <div class="mb-3">
                <div class="pt-4">

                    <h5 class="mb-3">The total amount </h5>

                    <ul class="list-group list-group-flush">

                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            Shipping
                            <span class="text-success">Free</span>
                        </li>
                        <li
                            class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                            <div>
                                <strong>The total amount of</strong>
                            </div>
                            <span id="total"><strong>0</strong></span>
                        </li>
                    </ul>

                    <a href="/checkout" class="btn btn-primary btn-block">go to checkout</a>

                </div>
            </div>
            <!-- Card -->


        </div>
        <!--Grid column-->

    </section>
</div>
<!--Section: Block Content-->